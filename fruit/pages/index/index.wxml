<!--index.wxml-->
<wxs module="filters" src="../../utils/filters.wxs"></wxs>
<view class="container1">
  <view class='slider'>
    <swiper autoplay interval="3500" indicator-dots="{{true}}">
        <swiper-item>
            <image src="../images/swiper_bg1.jpg" mode="aspectFill" lazy-load='true'/>
        </swiper-item> 
        <swiper-item>
            <image src="../images/swiper_bg2.jpg" mode="aspectFill" lazy-load='true'/>
        </swiper-item>
        <swiper-item>
            <image src="../images/swiper_bg3.jpg" mode="aspectFill" lazy-load='true'/>
        </swiper-item>
    </swiper>
  </view>

</view>
  <view class='cc'>
  <text class='cc-text'>热门推荐</text>
</view>
  <!-- 水果展示 -->
  <view class='wd'>
    <view class='wd-wraper'  wx:for='{{hotList}}'>
      <image src='{{item.img_url}}' bindtap='detail' data-id='{{item.sid}}'></image> 
        <text class='wd-text'>{{item.sname}}</text>
        <text class='wd-text' style='color:red'>￥{{filters.toFix(item.price)}}</text>
    </view>
  </view>


<!-- 精品干果 -->
 <view class='cc'>
  <text class='cc-text'>时令水果</text>
  <!-- 干果展示 -->
  <view class='wd'>
    <view class='wd-wraper' wx:for='{{list1}}'>
      <image src='http://127.0.0.1:3000/{{item.img_url}}' bindtap='detail' data-id='{{item.sid}}'></image> 
        <text class='wd-text'>{{item.sname}}</text>
        <text class='wd-text' style='color:red'>￥{{filters.toFix(item.price)}}</text>
    </view>
  </view>
</view>

<view class='ss'>
  <input type='text' placeholder='没看到想吃的？不妨再搜索一下。'></input>
</view>
 