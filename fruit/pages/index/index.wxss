.slide-image{
  height: 100%;
}
.cc{
  width:100%;
  height:120rpx;
  margin-top:10rpx;
  border:1px solid #eee;
  text-align: center;
}
.cc-text{
display: block;
background: #169A56;
width: 360rpx;
height: 60rpx;
line-height: 60rpx;
left:200rpx;
top:30rpx;
position:relative;
color:#fff;
font-weight: bold;
font-size:13px;
border-radius: 30rpx;
}
.wd{
  padding: 10rpx 2%;
  text-align: center;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  height: 900rpx;
  background: #ccc;
}
.wd .wd-wraper{
  width: 48.5%;
  height: 450rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
} 
.wd .wd-wraper:nth-child(2n+1){
  margin-right: 20rpx;
}
.wd .wd-wraper image{
  width: 100%;
  height: 350rpx;
}
.wd .wd-wraper text{
  line-height: 30px;
}
.wd .wd-wraper .item-name{
  background: #169A56;
  color: #fff;
  text-align: center;
}
.wd .wd-wraper .item-price{
  padding-right: 20rpx;
  text-align: right;
}
/*搜索*/
.ss{
  width: 100%;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.ss input{
  width: 600rpx;
  border-radius: 30rpx;
  background: #ddd;
  font-size: 14px;
  color: #ccc;
  padding-left:50rpx; 
}