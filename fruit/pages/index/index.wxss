/*无花果*/
.wd{
  display:flex; /*弹性布局*/
 flex-wrap: wrap; /*换行*/
}
.wd-wraper{
  width:48%;  /*商品元素*/
  height:450rpx;   /*商品高度*/
  box-sizing:border-box; 
  display:flex;    /*父元素 img text*/ 
  flex-direction: column; /*img text案列排放*/
  justify-content: center; /*居中水平*/
  align-items: center; /*垂直*/
  font-size:14px;
}
.wd-wraper image{
  border: 1rpx solid #ddd;
  width: 320rpx;
  height: 320rpx;
}
.wd-text{
  font-size:16px;
  color: #666;
}
